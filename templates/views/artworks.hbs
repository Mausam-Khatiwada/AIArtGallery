const artworksPerPage = 6; // Number of artworks per page
let currentPage = 1;

// Function to render the artworks for the current page
function renderArtworks() {
  const artworksContainer = document.getElementById('artworksContainer');
  artworksContainer.innerHTML = ''; // Clear existing artworks

  const startIndex = (currentPage - 1) * artworksPerPage;
  const endIndex = startIndex + artworksPerPage;

  artworks.slice(startIndex, endIndex).forEach((artwork) => {
    const artworkCard = `
      <div class="artwork-card">
        <img src="${artwork.imageUrl}" alt="${artwork.title}">
        <div class="artwork-details">
          <h2>${artwork.title}</h2>
          <p>By ${artwork.artist}</p>
        </div>
      </div>
    `;

    artworksContainer.innerHTML += artworkCard;
  });

  updatePaginationButtons();
}

// Function to update the state of pagination buttons
function updatePaginationButtons() {
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');

  if (currentPage === 1) {
    prevBtn.disabled = true;
  } else {
    prevBtn.disabled = false;
  }

  if (currentPage === Math.ceil(artworks.length / artworksPerPage)) {
    nextBtn.disabled = true;
  } else {
    nextBtn.disabled = false;
  }
}

// Event listener for "Next" button
document.getElementById('nextBtn').addEventListener('click', () => {
  currentPage++;
  renderArtworks();
});

// Event listener for "Previous" button
document.getElementById('prevBtn').addEventListener('click', () => {
  currentPage--;
  renderArtworks();
});

